    "build-styles": "scss-bundle -c scss-bundle-ontimize.config.json",
    "copy-files": "copyfiles -u 3 ./projects/ontimize-web-ngx/assets/svg/ontimize-icon-set.svg ./dist/assets && echo '----Â¡Assets copied!----'  ",
