{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": false,
    "declaration": true,
    "noImplicitReturns": true,
    "listFiles": true,
    "pretty": true,
    "stripInternal": true,
    "outDir": "dist",    
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "types": [
      "moment",
      "hammerjs",
      "jasmine",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015"
    ],
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/lib/ontimize-web-ngx.module.ts"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit": false,
    "strictMetadataEmit": true
  }
}